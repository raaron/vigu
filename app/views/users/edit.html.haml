- provide(:title, "Edit user")
%h1 Update your profile

= form_for(@user) do |f|
  = f.label :fname
  = f.text_field :fname
  = f.label :lname
  = f.text_field :lname
  = f.label :email
  = f.text_field :email
  = f.label :password
  = f.password_field :password
  = f.label :password_confirmation, "Confirmation"
  = f.password_field :password_confirmation
  = f.submit t(:save).capitalize